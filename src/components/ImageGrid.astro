---
const { images } = Astro.props; // images = [{src, alt, widths?}]
---
<style>
.grid {
  display: grid;
  gap: 12px;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
}
.grid img {
  width: 100%;
  height: 260px;
  object-fit: cover;
  display:block;
  border-radius: 6px;
  background: #f4f4f4;
}
</style>

<div class="grid">
  {images.map(img => (
    <picture>
      {/* <!-- webp / fallback --> */}
      <source srcset={`${img.src}.webp`} type="image/webp" />
      <img
        src={img.src}
        alt={img.alt || ''}
        loading="lazy"
        decoding="async"
        srcset={img.srcset ? img.srcset : undefined}
        width={img.width}
        height={img.height}
      />
    </picture>
  ))}
</div>
